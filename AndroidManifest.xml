<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chat.internetchat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.chat.internetchat.ChatScreen" >
        </activity>
        <activity
            android:name="com.chat.internetchat.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.chat.internetchat.ListItemDetail"
            android:label="@string/title_activity_list_item_detail" >
        </activity>
        <activity
            android:name="com.chat.internetchat.Favorites"
            android:label="@string/title_activity_favorites" >
        </activity>
    </application>

</manifest>